{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./lib/",
        "sourceMap": true,
        "paths": {
            "~/assets/*": [
              "./src/assets/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "lib"
    ],
    "include": ["src", "index.d.ts"] 
}